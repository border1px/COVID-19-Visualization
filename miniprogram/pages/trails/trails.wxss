/* pages/trails/trails.wxss */
.container{
  width: 100%;
  height: 100%;
}
#map{
  height: 600rpx;
  width: 100%;
}
.reloadTag{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 50rpx;
  top: 50rpx;
  z-index: 2;
}
.tips{
  font-size: 12px;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
}

.scroll-view{
  background-color: #FFF;
  padding-left: 50rpx;
}
.list-item{
  padding-right: 30rpx;
}
.list-item-inner{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 30rpx;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1px solid #F2F2F2; */
}
.list-item-line{
  height: 1px;
  background-color: #F2F2F2;
}
.list-item-l{
  display: flex;
  flex-direction: column;
  flex:1;
}
.list-item-sub{
  display: flex;
  margin-top: 10rpx;
  align-items: center;
  font-size: 12px;
}
.list-item-sub-l{
  width: 170rpx;
}
.list-item-sub-r{
  color: #808080;
}
.list-item-main{
  font-size: 14px;
  font-weight: bold;
}

.list-item-icon{
  width: 50rpx;
  height: 50rpx;
}
.tabs-h.activated {
  border: 1px solid #FF6347;
}